upstream plex {
    server 127.0.0.1:32400;
}

server {
    listen 80;
    server_name plex.lightning.rep;

    location /plex/ {
        include /etc/nginx/proxy_params;

        proxy_pass http://plex/manage;
    }

    location = / {
        rewrite "^(/)$" http://plex.lightning.rep/plex permanent;
    }

    location / {
        include /etc/nginx/proxy_params;

        proxy_pass http://plex;
    }
}
