# -*- mode: nginx -*-
upstream znc {
    server 192.168.1.106:65063;
}

server {
    listen 80;
    server_name znc.{{ inventory_hostname }};

    location /znc/ {
        include /etc/nginx/proxy_params;

        proxy_pass http://znc;
    }

    location / {
        include /etc/nginx/proxy_params;

        proxy_pass http://znc;
    }
}
