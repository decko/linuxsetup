# -*- mode: nginx -*-
upstream plex {
    server 127.0.0.1:32400;
}

server {
    listen 80;
    server_name plex.{{ inventory_hostname }};

    location /plex/ {
        include /etc/nginx/proxy_params;

        proxy_pass http://plex/manage;
    }

    location = / {
        rewrite "^(/)$" http://plex.{{ inventory_hostname }}/plex permanent;
    }

    location / {
        include /etc/nginx/proxy_params;

        proxy_pass http://plex;
    }
}
