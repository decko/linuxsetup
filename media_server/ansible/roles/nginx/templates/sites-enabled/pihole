# -*- mode: nginx -*-
upstream pihole {
    server 127.0.0.1:32400;
}

server {
    listen 80;
    server_name pihole.{{ server_name }};

    location = / {
        rewrite "^(/)$" http://pihole.{{ server_name }}/pihole permanent;
    }

    location / {
        include /etc/nginx/proxy_params;
        proxy_pass http://pihole/admin/;
    }
}
