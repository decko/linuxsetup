#!/usr/bin/env bash
function setup_env_vars {
    export PATH="$PATH:$HOME/.lein"
    export PATH="$PATH:$HOME/.sml/bin"
    export PATH="$PATH:$HOME/code/elixir/bin"
    export PATH="$PATH:$HOME/.cask/bin"
    export PATH="/usr/local/heroku/bin:$PATH" # heroku toolbelt

    export CODE_DIR="$HOME/code"
    export EDITOR="emacs -nw -q"

    export CDPATH=$CODE_DIR:$HOME/locaweb

    export MIMIPASS_HOME="$HOME/Copy/.secrets/mimipass"
    export MIMIPASS_RECIPIENT="renanranelli@gmail.com"

    # This enables bash eternal history
    export HISTFILESIZE=
    export HISTSIZE=

    export PS4='(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]} - [${SHLVL},${BASH_SUBSHELL}, $?]
'
}
